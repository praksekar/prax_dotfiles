# aliases
alias swapcaps="setxkbmap -option caps:swapescape"
alias copy="xclip -selection c"
alias trash="gio trash"
alias ll="ls -l"
alias la="ls -a"
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"
alias whatcanopen="mimeopen -a"
alias r="ranger"
alias swallow="bspwm_swallow"
#alias newsboat="newsboat --config-file=~/.config/newsboat/config --url-file=~/.config/newsboat/urls --cache-file=~/.cache/newsboat/cache.db --log-files=~/newsboat.log"

# shortcut to config files/load configs
alias dots="cd ~/Dotfiles"
alias i3conf="$EDITOR ~/.config/i3/config"
alias zshrc="$EDITOR $ZDOTDIR/.zshrc"
alias zshaliases="$EDITOR $ZDOTDIR/.zsh_aliases"
alias zshenv="$EDITOR ~/.zshenv"
alias zprofile="$EDITOR $ZDOTDIR/.zprofile"
alias zshload="source ~/.zshenv; source $ZDOTDIR/.zshrc" 
alias polyconf="$EDITOR ~/.config/polybar/config"
alias nvimconf="$EDITOR ~/.config/nvim/init.vim"
alias bspconf="$EDITOR ~/.config/bspwm/bspwmrc"
alias sxhconf="$EDITOR ~/.config/sxhkd/sxhkdrc"
alias emacsconf="bspwm_swallow semacs ~/.emacs.d/config.org"
alias lemonconf="$EDITOR ~/Dotfiles/system_scripts/usr/bin/bspwm_lemonbar"
alias tlpconf="$EDITOR /etc/tlp.conf"
alias installconf="$EDITOR ~/Dotfiles/install"
alias alacrittyconf="$EDITOR ~/.config/alacritty/alacritty.yml"


# shortcuts to applications
alias wifi="nmtui"
alias weather="curl wttr.in"
alias image_to_text_reader="gimagereader-gtk"

# shortcuts to folders
alias trashdir="cd ~/.local/share/Trash"
alias schooldir="cd ~/Documents/School"
alias bspdir="cd ~/.config/bspwm"
alias zshdir="cd ~/.config/zsh"
alias scripts="cd ~/Dotfiles/system_scripts/usr/bin"
alias doomdir="cd ~/.config/doom"
